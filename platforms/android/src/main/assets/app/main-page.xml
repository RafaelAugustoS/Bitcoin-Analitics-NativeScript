<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">    
    <ScrollView>
        <StackLayout class="p-20 bg">
            <StackLayout>
                <Label text="Portfolio" class="titlePage" />
                <Label text="Checkup your BitcoinTrade" class="subTitlePage" />
            </StackLayout>

            <StackLayout>
                <StackLayout class="borderRound">    
                    <StackLayout class="round">
                        <Label text="Valor para compra" class="roundTitle" />
                        <Label id="sellOfert" text="" class="roundValue" />
                    </StackLayout>
                </StackLayout>    
            </StackLayout>

            <StackLayout>
                <ListView id="listView1" items="{{ unit_price }}" height="500" rowHeight="50">
                    <ListView.itemTemplate>
                      <Label id="label1" text="{{ unit_price }}"  />
                    </ListView.itemTemplate>
                </ListView>
            </StackLayout>
           
        </StackLayout>
    </ScrollView>       
</Page>
